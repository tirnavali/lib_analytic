<!DOCTYPE html>
<html>
  <head>
    <title>LibAnalytic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'application_view.js' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--Added for devise-->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <!--Added for devise-->

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%=acquisition_reports_path%>">Acquisition Reports</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%=reference_analytics_path%>">Reference Reports</a>
      </li>
      
      <% if user_signed_in? %>
      <li class="nav-item">        
        <a class="nav-link " href="#<%=destroy_user_session_path%>">Logout</a>
      </li>
      <% else %>
      <li class="nav-item">        
        <a class="nav-link " href="<%=new_user_session_path%>">Login</a>
      </li>
      <% end %>
    </ul>
  </div>
</nav>
  <div class="row">
    <div class="col col-sm-2 col-md-2">
      <nav class="nav flex-column">
        <a class="nav-link active" href="/">Home</a>
        <a class="nav-link" href="<%=acquisition_reports_path%>">Acquisition Reports</a>
        <a class="nav-link" href="<%=reference_analytics_path%>">Reference Reports</a>
        <a class="nav-link" href="<%=journal_doc_reports_path%>">Journal Documentation Reports</a>
        <a class="nav-link " href="<%=personels_path%>">Personels</a>
        <a class="nav-link " href="<%=departments_path%>">Departments</a>
      </nav>
    </div>
    <div class="col col-sm-10 col-md-10">
      <%= yield %>
    </div>
  </div> <!-- row end -->
    
  </body>
</html>
